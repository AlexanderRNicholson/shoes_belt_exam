<!DOCTYPE html>
<html>
<head>
  <title>ShoesBeltExam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
    <%= e %>
    <% end %>
    <% end %>

<% if current_user %>
  <form action="/sessions/<%= current_user.id%>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Log Out">
  </form>
<% end %>

<% if current_page?(:controller => 'shoes', :action => 'index') && current_user %>
  <a href="/users/<%= current_user.id %>">Go to Dashboard</a>
<% end %>


<% if current_user %>
  <a href="/shoes">Go to All Products</a>
<% end %>

<%= yield %>

</body>
</html>
