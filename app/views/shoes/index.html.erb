<h4>Welcome, <%= current_user.first_name %>!</h4>

<h4>All Products</h4>

<table>
    <tr>
        <th>Product</th>
        <th>Seller</th>
        <th>Date Posted</th>
        <th>Amount</th>
        <th>Action</th>
    </tr>
    <% @shoes.each do |shoe| %>
        <tr>
            <td><%= shoe.name %></td>
            <td><%= shoe.user.first_name %> <%= shoe.user.last_name %></td>
            <td><%= shoe.created_at.strftime("%B %d, %Y") %></td>
            <td>$<%= shoe.amount %></td>
            <td><form action="/transactions/<%= shoe.id %>" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="submit" value="Buy">
                </form>
            </td>
                
        </tr>
    <% end %>
</table>